<resources>

    <!--<style name="Theme"></style>-->

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- For underline-->
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>


    <style name="et_loginActivity_loginInformationField">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:layout_marginLeft">@dimen/login_user_info_margin_hor</item>
        <item name="android:layout_marginRight">@dimen/login_user_info_margin_hor</item>
    </style>

    <style name="btn_loginActivity_signInWithProvider">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>

        <item name="android:background">@drawable/btn_login</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/tv_sign_in_text_size</item>

        <item name="android:layout_marginStart">@dimen/btn_login_margin_side</item>
        <item name="android:layout_marginEnd">@dimen/btn_login_margin_side</item>
    </style>

    <style name="btn_raised">
        <item name="android:layout_height">@dimen/btn_raised_height</item>
        <item name="android:layout_width">wrap_content</item>

        <item name="android:background">@drawable/btn_login</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/btn_raised_text_size</item>

        <item name="android:layout_marginStart">@dimen/btn_login_margin_side</item>
        <item name="android:layout_marginEnd">@dimen/btn_login_margin_side</item>
        <item name="android:layout_marginTop">@dimen/btn_raised_margin_ver</item>
        <item name="android:layout_marginBottom">@dimen/btn_raised_margin_ver</item>
        <item name="android:paddingLeft">@dimen/btn_login_padding_side</item>
        <item name="android:paddingRight">@dimen/btn_login_padding_side</item>
    </style>

    <style name="btn_flat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>

        <item name="android:background">@drawable/btn_transparent</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/maroon</item>
        <item name="android:textSize">@dimen/btn_raised_text_size</item>

        <item name="android:layout_marginStart">@dimen/btn_login_margin_side</item>
        <item name="android:layout_marginEnd">@dimen/btn_login_margin_side</item>
        <item name="android:layout_marginTop">@dimen/btn_raised_margin_ver</item>
        <item name="android:layout_marginBottom">@dimen/btn_raised_margin_ver</item>
    </style>
</resources>
